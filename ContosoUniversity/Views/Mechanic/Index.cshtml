@model ContosoUniversity.ViewModels.MechanicIndexData

@{
    ViewBag.Title = "Mechanics";
}

<h2>Mechanics</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Hire Date</th>
        <th>BoxNumber</th>
        <th>Cars</th>
        <th></th>
    </tr>



    @foreach (var item in Model.Mechanics)
    {
        string selectedRow = "";
        if (item.ID == ViewBag.MechanicID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @if (item.Box != null)
                {
                    @item.Box.Number
                }
            </td>
            <td>
                @{
                    foreach (var car in item.Cars)
                    {
                        @car.CarID @:  @car.Title <br />
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.ID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

@if (Model.Cars != null)
{
    <h3>Cars Taught by Selected Mechanic</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Number</th>
            <th>Title</th>
            <th>Department</th>
        </tr>

        @foreach (var item in Model.Cars)
        {
            string selectedRow = "";
            if (item.CarID == ViewBag.CarID)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Select", "Index", new { courseID = item.CarID })
                </td>
                <td>
                    @item.CarID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Department.Name
                </td>
            </tr>
        }

    </table>
}

@if (Model.Contracts != null)
{
    <h3>
        Drivers Enrolled in Selected Course
    </h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Salary</th>
        </tr>
        @foreach (var item in Model.Contracts)
        {
            <tr>
                <td>
                    @item.Driver.FullName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
            </tr>
        }
    </table>
}
